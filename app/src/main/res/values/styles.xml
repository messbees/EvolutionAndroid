<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Evolution" parent="AppTheme" >
        <item name="android:colorBackground">@color/EvolutionLightGreen</item>
        <item name="android:colorForeground">@color/EvolutionDarkGreen</item>
        <item name="colorPrimary">@color/EvolutionDarkGreen</item>
        <item name="colorAccent">@color/EvolutionMediumGreen</item>
        <item name="colorPrimaryDark">@color/EvolutionDarkGreen</item>
        <item name="android:navigationBarColor">@color/EvolutionDarkestGreen</item>
        <item name="android:statusBarColor">@color/EvolutionDarkestGreen</item>
    </style>

    <style name="dividerBase">
        <item name="android:background">@color/EvolutionDarkGreen</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="dividerHorizontal" parent="dividerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item> // You can change thickness here.
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="dividerVertical" parent="dividerBase">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
